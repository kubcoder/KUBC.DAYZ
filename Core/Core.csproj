<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<RootNamespace>KUBC.DAYZ</RootNamespace>
		<Version>10.0.0</Version>
		<Description>
			Базовые элементы данных игры
		</Description>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Title>KUBC.DAYZ.Core</Title>
		<Authors>agorshenin</Authors>
		<Company>KUBCODER</Company>
		<AssemblyName>KUBC.DAYZ.Core</AssemblyName>
		<Product>KUBC.DAYZ.Core</Product>
		<RepositoryUrl>https://github.com/kubcoder/KUBC.DAYZ.GAME</RepositoryUrl>
		<PackageProjectUrl>https://www.nuget.org/packages/KUBC.DAYZ.Core</PackageProjectUrl>
		<PackageReleaseNotes>Обновили до стабильной версии .NET 10</PackageReleaseNotes>
		<NeutralLanguage>ru</NeutralLanguage>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Copyright>KUBC.DAYZ.Core © 2025 KUBCODER</Copyright>
		<PackageReadmeFile>Readme.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageIcon>dayz_icon.png</PackageIcon>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<NoWarn>1701;1702; CA2254; CA1873;</NoWarn>
		<DebugType>full</DebugType>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<NoWarn>1701;1702; CA2254; CA1873;</NoWarn>
		<DebugType>none</DebugType>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\LICENSE.txt">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="NOTICE.txt">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="Readme.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="ChangeLog.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\dayz_icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
</Project>
